{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "ADead-BIB",
  "scopeName": "source.adB",
  "fileTypes": ["adB"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#types" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.adB",
          "match": "//.*$"
        },
        {
          "name": "comment.block.adB",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.adB",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.adB",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.adB",
          "begin": "'",
          "end": "'"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.adB",
          "match": "\\b(if|else|while|for|loop|break|continue|return|match)\\b"
        },
        {
          "name": "keyword.declaration.adB",
          "match": "\\b(fn|let|const|struct|trait|impl|enum|type|mod|use|import|from|pub)\\b"
        },
        {
          "name": "keyword.other.adB",
          "match": "\\b(self|Self|true|false|null|none)\\b"
        },
        {
          "name": "keyword.special.adB",
          "match": "\\b(cpu|gpu|emit|asm|hex|raw)\\b"
        },
        {
          "name": "support.function.builtin.adB",
          "match": "\\b(print|println|input|len|push|pop|get|set)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.adB",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "meta.function.definition.adB",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.adB" },
            "2": { "name": "entity.name.function.adB" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.adB",
          "match": "\\b(i8|i16|i32|i64|u8|u16|u32|u64|f32|f64|bool|str|char|void|int|float|string)\\b"
        },
        {
          "name": "entity.name.type.adB",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.adB",
          "match": "\\b0x[0-9A-Fa-f_]+\\b"
        },
        {
          "name": "constant.numeric.binary.adB",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.adB",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.float.adB",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*\\b"
        },
        {
          "name": "constant.numeric.integer.adB",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.adB",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.adB",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.logical.adB",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.adB",
          "match": "(=|\\+=|-=|\\*=|/=)"
        },
        {
          "name": "keyword.operator.namespace.adB",
          "match": "::"
        },
        {
          "name": "keyword.operator.arrow.adB",
          "match": "->"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.adB",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
